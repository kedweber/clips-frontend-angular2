// http://github.com/Microsoft/TypeScript/wiki/tsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    "module": "system", //"commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ]
}