{
  "name": "CLiPS-FrontEnd",
  "version": "0.0.1",
  "description": "The CLiPs Angular2 Front-end",
  "main": "gulpfile.js",
  "scripts": {
    "test": "karma start --single-run --browsers PhantomJS",

    // suggested by Angular group
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ", // execute with "npm start"
    "lite": "lite-server", // execute static file server for apps using routing with "npm run lite"
    "postinstall": "typings install", //called by npm automatically after it successfully installed
    "tsc": "tsc", // execute TypeScript compiler once with "npm run tsc"
    "tsc:w": "tsc -w", // execute TypeScript compiler with watcher "npm run tsc:w"
    "typings": "typings" // execute tool seperately with "npm run typings"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kedweber/clips-frontend-angular2.git"
  },
  "keywords": [
    "CLiPs",
    "Angular2",
    "Ionic",
    "Karma",
    "Jasmine",
    "Unit",
    "Testing",
    "Mobile",
    "Multi-platform",
    "Educational"
  ],
  "author": "kedweber",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kedweber/clips-frontend-angular2/issues"
  },
  "homepage": "https://github.com/kedweber/clips-frontend-angular2",

  "dependencies": {
    // Add Angular dependencies
    "@angular/common": "2.0.0-rc.5",
    "@angular/compiler": "2.0.0-rc.5",
    "@angular/core": "2.0.0-rc.5",
    "@angular/forms": "0.3.0",
    "@angular/http": "2.0.0-rc.5",
    "@angular/platform-browser": "2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "2.0.0-rc.5",
    "@angular/router": "3.0.0-rc.1",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.5",

    "systemjs": "0.19.27", // library for module loading
    "core-js": "^2.4.0",
    "reflect-metadata": "^0.1.3", // polyfills
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.12", // polyfills

    "angular2-in-memory-web-api": "0.0.15",
    "bootstrap": "^3.3.6"
  },
  "devDependencies": {
    "bower": "^1.7.9",

    // Add Angular dependencies
    "concurrently": "^2.0.0",
    "lite-server": "^2.2.0",
    "typescript": "^1.8.10",
    "typings":"^1.0.4"

    // Karma Test Environment
    "karma": "~0.12"
  }
}
